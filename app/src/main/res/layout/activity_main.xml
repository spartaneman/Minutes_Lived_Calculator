<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/calculateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CALCULATE YOUR"
        android:textColor="@color/textRed"
        android:textSize="25dp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/ageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AGE"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#2a9d8f"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/inMinutesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IN MINUTES"
        android:textColor="@color/textRed"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/calulateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        android:textColor="@color/textRed"
        android:textSize="25dp"
        android:backgroundTint="#219ebc"
        />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="date"
        android:textColor="@color/textRed"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/selectView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selected Date"
        android:textColor="@color/lightGrey"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/minutesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="minutes"
        android:textColor="@color/textRed"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/selectDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total Minutes"
        android:textColor="@color/lightGrey"
        android:textSize="20dp"
        android:textStyle="bold"
        />
</LinearLayout>